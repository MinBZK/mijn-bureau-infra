global:
  imagePullSecrets:
    - name: {{ (coalesce .Values.container.postgresql.imagePullSecrets .Values.container.default.imagePullSecrets) | quote }}
  security:
    allowInsecureImages: true
  postgresql:
    auth:
      postgresPassword: {{ .Values.secret.postgresql.postgresUser | quote }}

commonLabels:
  app.kubernetes.io/part-of: synapse

commonAnnotations:
  {{ .Values.annotations.postgresql.common | toYaml | nindent 2 }}

image:
  registry: {{ coalesce .Values.global.containerRegistry .Values.container.postgresql.registry | quote }}
  repository: {{ .Values.container.postgresql.repository | quote }}
  tag: {{ .Values.container.postgresql.tag | quote }}
  pullPolicy: {{ .Values.global.imagePullPolicy | quote }}

auth:
  enablePostgresUser: true
  postgresPassword: {{ .Values.secret.postgresql.postgresUser | quote }}
  database: {{ .Values.database.synapse.name | quote }}
  username: {{ .Values.database.synapse.username | quote }}
  password: {{ .Values.secret.postgresql.matrixUser | quote }}

primary:
  resources:
    {{ .Values.resource.postgresql | toYaml | nindent 4 }}
  podAnnotions:
    {{ .Values.annotations.postgresql.pod | toYaml | nindent 4 }}
  service:
    annotations:
      {{ .Values.annotations.postgresql.service | toYaml | nindent 6 }}
  persistence:
    storageClass: {{ coalesce .Values.pvc.postgresql.storageClass .Values.pvc.default.storageClass | quote }}
    size: {{ coalesce .Values.pvc.postgresql.size .Values.pvc.default.size | quote }}
    annotations:
      {{ .Values.annotations.postgresql.persistence | toYaml | nindent 6 }}
  networkPolicy:
    enabled: true
    allowExternal: false
    allowExternalEgress: false
    extraIngress:
      - ports:
          - port: {{ .Values.database.synapse.port }}
            protocol: TCP
        from:
          - podSelector:
              matchLabels:
                app.kubernetes.io/name: synapse
  initdb:
    args: "--encoding=UTF8 --locale=C"

serviceAccount:
  annotations:
    {{ .Values.annotations.postgresql.serviceAccount | toYaml | nindent 4 }}
